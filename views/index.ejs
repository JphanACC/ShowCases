<!DOCTYPE html>
<html lang="en">

<%- include ('partials/head') %>

    <body>
        <div class="container">
            <!-- Row 1 - Head Nav -->
            <div class="row">
                <div class="col" style="padding: 35px;">
                    <%- include ('partials/head-nav') %>
                </div>
            </div>
            <!-- Row 2 - Body  -->
            <div class="row">
                <!-- Sidebar -->
                <div class="col-md-2" style="margin: 0px 25px 0px 0px;">
                    <%- include ('partials/sidebar') %>
                </div>
                <!-- Main Content (Post/User Posts) -->
                <div class="col-md-6">
                    <div class="row">
                        <div class="col">
                            <%- include ('partials/User/user-post') %>
                        </div>
                    </div>
                    <!-- User posts-->
                    <% eachPost.forEach((post) => { %>

                        <%- include ('partials/User/user-show-posts', {post: post}) %>
                            <% }) %>
                </div>
                <!-- Followers  -->
                <div class="col-md-2" style="margin: 0px 0px 0px 25px;">

                    <%- include ('partials/following') %>

                </div>
            </div>
            <!-- Row 3 - Footer Likes -->
            <div class="row" style="background-color:royalblue">
                <%- include ('partials/trending') %>
            </div>
        </div>
    </body>

</html>