<nav class="fixed-bottom">
    <div class="container">
        <div class="row">
            <button>Trending now!</button>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div id="trending-carousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ul class="carousel-indicators">
                    <li data-target="#trending-carousel" data-slide-to="0" class="active"></li>
                    <% if (trendingPosts.length >= 6 && trendingPosts.length <= 12) { %>
                        <li data-target="#trending-carousel" data-slide-to="1"></li>
                        <% } else if (trendingPosts.length > 12) { %>
                            <li data-target="#trending-carousel" data-slide-to="2"></li>
                            <% } %>
                </ul>

                <!-- The slideshow -->
                <div class="carousel-inner no-padding">
                    <div class="carousel-item active">
                        <% for( let index = 0; index < 6; index++ ) { %>
                            <%- include ('./carousel-items/carousel-item', {index: index}) %>
                                <% } %>
                    </div>
                    <% if (trendingPosts.length >= 6 && trendingPosts.length <= 12) { %>
                        <div class="carousel-item">
                            <% for( let index = 6; index < 12; index++ ) { %>
                                <%- include ('./carousel-items/carousel-item', {index: index}) %>
                                    <% } %>
                        </div>
                        <% } else if (trendingPosts.length > 12) { %>
                            <div class="carousel-item">
                                <% for( let index = 12; index < 18; index++ ) { %>
                                    <%- include ('./carousel-items/carousel-item', {index: index}) %>
                                        <% } %>
                            </div>
                            <% } %>
                                <!-- Left and right controls -->
                                <a class="carousel-control-prev" href="#trending-carousel" data-slide="prev">
                                    <span class="carousel-control-prev-icon"></span>
                                </a>
                                <a class="carousel-control-next" href="#trending-carousel" data-slide="next">
                                    <span class="carousel-control-next-icon"></span>
                                </a>
                </div>
            </div>
        </div>
    </div>
</nav>